html
	head
		title= app.title
		meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")

		//- Fonts & Icons
		link(rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans|Raleway" )

		//- Styles
		link( rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.3.1/css/bulma.min.css" )
			
		if app.production
			link( rel="stylesheet" href="/styles/global.min.css" )
		else
			link( rel="stylesheet" href="/styles/global.css" )

		block head

	body

		//- if app.showNavbar
		//- 	include shared/navbar/index.pug

		#app
			block content

		if app.production
			script(src="https://cdnjs.cloudflare.com/ajax/libs/vuex/2.1.1/vuex.min.js")
			script(src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.1.8/vue.min.js")
		else
			script(src="https://cdnjs.cloudflare.com/ajax/libs/vuex/2.1.1/vuex.js")
			script(src="https://unpkg.com/vue/dist/vue.js")

		block scripts